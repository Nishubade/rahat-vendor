<body>
  <%- include ("./_layouts/header")%>

  <div class="appHeader bg-primary text-light">
    <div class="left">
      <a href="javascript:;" class="headerButton goBack">
        <ion-icon name="chevron-back-outline"></ion-icon>
      </a>
    </div>
    <div class="pageTitle">Request Token</div>
    <div class="right">
      <a href="/home" class="headerButton">
        <ion-icon name="home-outline"></ion-icon>
      </a>
    </div>
  </div>

  <div id="appCapsule">
    <div id="cmpMain">
      <div class="section mt-2 mb-5">
        <div class="card mt-5" id="cmpRequest">
          <div class="card-body">
            <form>
              <div class="form-group boxed" style="padding:0px">
                <div class="input-wrapper">
                  <label class="label" for="sendToAddr">Phone Number:</label>
                  <div class="input-group mb-3">
                    <input type="text" class="form-control" id="phone" name="phone"
                      placeholder="Enter Beneficiary's Number">
                    <i class="clear-input">
                      <ion-icon name="close-circle" role="img" class="md hydrated" aria-label="close circle"></ion-icon>
                    </i>
                    <div class="ml-1">
                      <button type="button" class="btn btn-icon btn-primary mr-1 mb-1 btn-scan-address">
                        <ion-icon name="qr-code-outline"></ion-icon>
                      </button>
                    </div>
                  </div>
                </div>
              </div>

              <div class="form-group boxed" style="padding:0px">
                <div class="input-wrapper">
                  <label class="label" for="sendAmount">Amount to Request:</label>
                  <input type="number" class="form-control" id="tokenAmount" name="tokenAmount"
                    placeholder="Enter Token amount to request" value="<%=amount%>">
                  <i class="clear-input">
                    <ion-icon name="close-circle" role="img" class="md hydrated" aria-label="close circle"></ion-icon>
                  </i>
                </div>
              </div>

            </form>
          </div>

          <div class="card-footer text-right">
            <button type="button" id="btnRequest" class="btn btn-success">
              <ion-icon name="send-outline"></ion-icon> Request Token
            </button>
          </div>
        </div>
      </div>

